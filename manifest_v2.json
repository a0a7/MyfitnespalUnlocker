{
  "manifest_version": 2,
  "name": "MyfitnespalUnlocker",
  "version": "1.0.0",
  "description": "Unlock premium features on MyFitnessPal by removing premium links and blur filters",
  
  "permissions": [
    "*://*.myfitnesspal.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://*.myfitnesspal.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "myfitnespal-unlocker@extension.local",
      "strict_min_version": "57.0"
    }
  }
}
